@{
}

<form class="text-center" asp-controller="Login" asp-action="Login" asp-antiforgery="true">
    <div class="card">
        <div class="card-header">
            Авторизация
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Nickname">Псевдоним</label>
                <input type="text" asp-for="Nickname" />
                <span asp-validation-for="Nickname"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="RememberMe">Запомнить меня</label>
                <input type="checkbox" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe"></span>
            </div>

            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <input type="submit" value="Войти" />
            </div>
        </div>
    </div>

</form>

